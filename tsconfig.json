{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ES2020",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "noEmit": true,
        "strict": true,
        "noImplicitAny": true,
        "removeComments": true,
        "sourceMap": true,
        "noImplicitReturns": true,
        "exactOptionalPropertyTypes": false,
        "noPropertyAccessFromIndexSignature": false,
        "outDir": "lib"
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}
